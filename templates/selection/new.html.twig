{% extends 'base.html.twig' %}

{% block title %}New Selection{% endblock %}


{% block body %}
    {% include 'headers/_jumbo.html.twig' with {jumboTitle:'Créer une nouvelle sélection ',jumboText:""} %}


    {{ include('selection/_form.html.twig') }}

    <div class="row justify-content-center text-center">
        <div class="col-md-2  mt-2 mb-3">

            <a class="btn btn-info" href="{{ path('selection_index') }}">Retour à la liste</a>
        </div>
    </div>


{% endblock %}


{% block javascripts %}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js" integrity="sha256-bqVeqGdJ7h/lYPq6xrPv/YGzMEb6dNxlfiTUHSgRCp8=" crossorigin="anonymous"></script>

    <script>
        $(document).ready(function(){
            $('#selection_date_start,#selection_date_end').datepicker({
                format: 'dd/mm/yyyy',
                startDate: new Date()
            });
        })
    </script>


{% endblock %}